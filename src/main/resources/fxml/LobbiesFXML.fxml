<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" styleClass="title-page-image" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.myshelfie.view.GUI.LobbiesControllerFX">
   <center>
      <BorderPane maxHeight="760" maxWidth="1280" minHeight="-Infinity" minWidth="-Infinity" prefHeight="760" prefWidth="1280">
         <center>
            <ScrollPane fitToWidth="true" hbarPolicy="NEVER">
               <content>
                  <VBox fx:id="LobbyContainer" alignment="TOP_CENTER" prefHeight="250.0" prefWidth="300.0" BorderPane.alignment="CENTER" />
               </content>
            </ScrollPane>
         </center>
         <bottom>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0" styleClass="lobbies-box" BorderPane.alignment="CENTER">
               <children>
                  <Label />
                  <TextField fx:id="CreateGameName_TXT" prefHeight="26.0" prefWidth="94.0" promptText="GameName" />
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="143.0" spacing="10.0">
                     <children>
                        <Label text="Rules" />
                        <ChoiceBox fx:id="Rules_CB" prefHeight="26.0" prefWidth="65.0" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="128.0" spacing="10.0">
                     <children>
                        <Label text="#Players" />
                        <ChoiceBox fx:id="Players_CB" prefHeight="26.0" prefWidth="65.0" />
                     </children>
                  </HBox>
                  <Button fx:id="CreateGame_BTN" mnemonicParsing="false" onAction="#createGame" text="Create Game" />
               </children>
               <BorderPane.margin>
                  <Insets top="25.0" />
               </BorderPane.margin>
            </HBox>
         </bottom>
         <left>
            <AnchorPane prefHeight="200.0" prefWidth="50.0" BorderPane.alignment="CENTER" />
         </left>
         <right>
            <AnchorPane prefHeight="200.0" prefWidth="50.0" BorderPane.alignment="CENTER" />
         </right>
         <top>
            <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" spacing="50.0" styleClass="lobbies-box" BorderPane.alignment="CENTER">
               <children>
                  <Label text="Match Availables" />
                  <Button fx:id="refresh_BTN" mnemonicParsing="false" onAction="#refresh" text="Refresh" />
               </children>
               <BorderPane.margin>
                  <Insets bottom="25.0" />
               </BorderPane.margin>
            </HBox>
         </top>
      </BorderPane>
   </center>
</BorderPane>
